<div class="ups-wrap">
    <div class="ups-wrap_inner">
        <div class="ups-form_wrap ups-widget ups-zoneChart {{bg}}">
            <div class="ups-widget_header">
                <h2 id="ups-download-zc_head">Download Zone Charts</h2>
                <button class="ups-help_button">
                        <i class="icon ups-icon-questioncircle" aria-hidden="true"></i>
                        <span class="ups-helpicon-text">Help</span>
                    </button>
            </div>
            <div class="ups-widget_panel" aria-labelledby="ups-download-zc_head" role="group">
