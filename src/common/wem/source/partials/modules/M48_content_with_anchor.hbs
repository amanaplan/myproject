<div class="ups-content_with_anchor ups-wrap">
    <div class="ups-wrap_inner">
        
            {{#if this.newtitle}}
            <h2>{{this.newtitle}}</h2>
            {{/if}} 
        
        
            {{#if this.newsubtitle}}
                <h3>{{this.newsubtitle}}</h3>
            {{/if}} 
        

            {{#if this.copy}}
                <p>{{this.copy}}</p>
            {{/if}}    
        <div class="ups-content_with_anchor_index">
           <p>This document contains:</p>
            <ul>
            {{#each  contentBlocks}}
                <li><a href="#contentBlock{{@index}}">{{this.heading.text}}</a></li>
            {{/each}}
            </ul>
        </div>
        <div class="ups-content_with_anchor-wrapper">
            {{#each  contentBlocks}}
               <div id="contentBlock{{@index}}" class = "ups-content_wrapTop"></div>
                <div class='ups-content_wrap'>
                    {{>M44_content_block this}}
                    <a class="ups-content_with_wrapper_link" href=""><span class="ups-icon-2chevronup" aria-hidden="true"></span>Back to the top</a>
                </div>
            {{/each}}
        </div>
    </div>
</div>