m-6"> 		<!-- Begin Card Image List -->		<div class="ups-form_group ups-no_label clearfix" aria-hidden="true">			<ul class="ups-cardOrder_list">				{{#each card_img_option}}				<li class="ups-\{{item | join}} ups-{{this.img-class}}"            data-ng-repeat="item in payementData.cardOptions"            data-ng-class="{'ups-active':item===form.Cardtype}"> 					<!--<span class="ups-readerTxt">{{this.img-class}}</span>--> 				</li>				{{/each}}			</ul>		</div>		<!-- End Card Image List --> 	</div>	--}}</div><!-- Begin Expiration --><div class="row">	<div class="col-sm-4"> 		<!-- Begin Card Expiration (month) -->		<div class="ups-form_group ups-form_required">			<label for="ups-month" class="ups-form_label"> Expiration <span aria-hidden="true" class="ups-required_indicator"></span> </label>			<div class="ups-dropdown_wrapper ups-input_wrapper"                data-errormsg="This field is required"> {{#is app "ppc"}}				<select error-on-blur                    data-ng-class="{'ups-bodError':(ups_Cardform.month.$invalid && clicked)}"                    id="ups-month"                     class="ups-dropdown{{#if error}} ng-invalid ng-dirty{{/if}}"                     name="month"                    data-ng-model="form.month"                     aria-required="true"					{{#if error}}aria-describedby="ups-expMonth-error"{{/if}}                    required>					<option value="" selected>--Month--</option>					<option data-ng-disabled="item.isValid"                        data-ng-repeat="item in Months"                         value="\{{item.month}}"> \{{item.month}}</option>				</select>				{{else}}				<select name="cardType" 					id="ups-cardType" 					class="ups-dropdown{{#if error}} ng-invalid ng-dirty{{/if}}" 					aria-describedby="ups-expMonth-error" 					required>					<option selected="selected" value="" disabled="disabled">--Month--</option>					                    {{#each month_option}}                    					<option value="{{this.value}}">{{this.value}}</option>					                    {{/each}}                				</select>				{{/is}}				{{#if non_error}}				<div class="ups-check ups-active"> 					<span class="icon selectbox ups-icon-check" aria-hidden="true"></span> 					<span class="ups-readerTxt">Check</span> 				</div>				{{/if}}			</div>			{{#if error}} 			<span class="ups-icons-error" id="ups-expMonth-error" role="alert"> 				<span class="ups-invalid_color"> 					<span class="icon ups-icon-exclamation ups-error_exclamation"></span> 					<span class="ups-readerTxt">Invalid</span> <span>Month error.</span> 				</span> 			</span> 			{{/if}} 		</div>		<!-- End Card Expiration (month) --> 	</div>	<div class="col-sm-4"> 		<!-- Begin Card Expiration (year) -->		<div class="ups-form_group ups-form_required">			<label for="ups-year" class="ups-no_label ups-readerTxt"> Expiration Year <span aria-hidden="true" class="ups-required_indicator"></span> </label>			<div class="ups-dropdown_wrapper ups-input_wrapper ups-no_label">				<select name="cardType" 					id="ups-cardType" 					class="ups-dropdown{{#if error}} ng-invalid ng-dirty{{/if}}" 					{{#if error}}aria-describedby="ups-expYear-error"{{/if}}					required>					<option selected="selected" value="" disabled="disabled">--Year--</option>					                    {{#each year_option}}                    					<option value="{{this.value}}">{{this.value}}</option>					                    {{/each}}                				</select>				{{#if non_error}}				<div class="ups-check ups-active"> 					<span class="icon selectbox ups-icon-check" aria-hidden="true"></span> 					<span class="ups-readerTxt">Check</span> 				</div>				{{/if}}			</div>			{{#if error}} 			<span class="ups-icons-error" id="ups-expYear-error" role="alert"> 				<span class="ups-invalid_color"> 					<span class="icon ups-icon-exclamation ups-error_exclamation"></span> 					<span class="ups-readerTxt">Invalid</span> <span>Year error.</span> 				</span> 			</span> 			{{/if}} 		</div>		<!-- End Card Expiration (year) --> 	</div>	<!-- End Expiration --> 		<!-- Begin CVV -->	<div class="col-sm-4">		<div class="ups-form_group ups-form_required ups-help_wrapper">			<label for="ups-code" class="ups-form_label"> CVV <span aria-hidden="true" class="ups-required_indicator"></span></label>			<div class="ups-help"> <a href="#" class="ups-help_link icon ups-active ups-form_link-noDecoration"> Help <span class="ups-icon-questioncircle" aria-hidden="true"></span> <span class="ups-readerTxt">CVV</span> </a>				<div class="ups-help_tooltip ups-help_tooltip_bottomleft">					<button type="button" class="ups-help_close icon "> <span class=" ups-icon-x ups-iconAlone" aria-hidden="true"></span> <span class="ups-readerTxt">Close</span> </button>					<p>Explanatory text lorem ipsum dolor sit amet.</p>				</div>			</div>			<div class="ups-text_wrapper ups-input_wrapper">				<input type="text"					name="verify" 					class="ups-form_input{{#if error}} ng-invalid ng-dirty{{/if}}"					maxlength="4" 					aria-required="true" 					required 					{{#if error}}aria-describedby="ups-cvv-error"{{/if}}>				{{#if non_error}}				<div class="ups-check ups-active"> 					<span class="icon selectbox ups-icon-check" aria-hidden="true"></span> 					<span class="ups-readerTxt">Check</span> 				</div>				{{/if}}			</div>			{{#if error}} 			<span class="ups-icons-error" id="ups-cvv-error" role="alert"> 				<span class="ups-invalid_color"> 					<span class="icon ups-icon-exclamation ups-error_exclamation"></span> 					<span class="ups-readerTxt">Invalid</span> <span>CVV error.</span> 				</span> 			</span> 			{{/if}}		</div>		<!-- End CVV --> 	</div></div>{{#if nickname}}<!-- Begin Nickname --><div class="ups-form_group">	<label class="ups-form_label" for="ups-cardNickName">Nickname</label>	<div class="ups-text_wrapper ups-input_wrapper"            data-errormsg="This field is required">		<input id="ups-cardNickName"                type="text"                name="Nickname"               class="ups-form_input"                maxlength="35"               data-ng-pattern=""                data-ng-model="form.Nickname"               data-ng-model-options="{updateOn: 'blur'}">	</div>	<!-- ups-text_wrapper ups-input_wrapper --> </div><!-- End Nickname -->{{/if}}{{#if make_default_payment}}<!-- Begin Checkbox (make this my default payment method) --><div class="ups-form_group ups-checkbox ups-input_wrapper  "    data-errormsg="Remember Me">	<input check-verify id="ups-offers_checkbox_non-US"        class="ups-checkbox-custom ups-ng-pristine data-ng-untouched data-ng-valid"        type="checkbox" name="makeDefault" data-ng-pattern=""        data-ng-model="form.makeDefault"        data-ng-model-options="{updateOn: 'blur'}">	<label        for="ups-offers_checkbox_non-US" class="ups-checkbox-custom-label"> Make this my default payment method.</label></div><!-- End Checkbox (make this my default payment method) -->{{/if}} <!-- Begin Billing address Radio buttons --><fieldset class="ups-form_group ups-form_required">	<legend class="ups-form_label ups-no-border ups-asterisk-no-label"> Billing Address <span aria-hidden="true" class="ups-required_indicator"></span> <span class="ups-readerTxt">Required</span> </legend>	<div class="ups-buttonList_wrapper ups-input_wrapper">		<input id="ups-sameBillingAddress"             class="ups-radio-custom"            type="radio"             name="ups-sameBillingAddress"            value="SameAdd">		<label for="ups-sameBillingAddress" class="ups-radio-custom-label"> {2010 Warsaw Rd., Roswell, GA 30076}</label>		<!--<div class="ups-inner_content">            <address >                <p>1234 Main St.</p>                <p>Dallas, Texas 66666</p>            </address>        </div>--> 	</div>	<div class="ups-buttonList_wrapper ups-input_wrapper">		<input id="ups-diffBillingAddress"             class="ups-radio-custom"            type="radio"             name="ups-sameBillingAddress"            value="diffAdd">		<label for="ups-diffBillingAddress" class="ups-radio-custom-label"> Enter a different address.</label>	</div>	<!-- ups-form_group ups-form_required --></fieldset><!-- End Billing address Radio buttons -->{{#if cac_included }}<div id="payCacFields">    {{>A20_common_address_component cac_included_values }}</div>{{/if}}{{#if save_payment }}<!-- Begin Save payment method --><div class="ups-form_group ups-checkbox ups-input_wrapper">	<input id="ups-cpc_save_payment"        class="ups-checkbox-custom"        type="checkbox" name="ups-cpc_save_payment">	<label for="ups-cpc_save_payment" class="ups-checkbox-custom-label">Save this information to my profile.</label></div><div class="ups-form_group" id="upsCPCNicknameField">	<label class="ups-form_label" for="ups-cpc_save_nickname">Nickname</label>	<div class="ups-text_wrapper ups-input_wrapper">		<input id="ups-cpc_save_nickname"            type="text"            name="ups-cpc_save_nickname"            class="ups-form_input"            maxlength="35">	</div>	<!-- ups-text_wrapper ups-input_wrapper --> </div><!-- End Save payment method -->{{/if}}<!-- /////////////////////////////// --> <!-- //// End CPC               //// --> <!-- /////////////////////////////// --> 