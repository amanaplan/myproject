 var halfHour = Math.round(d.getMinutes()/30);
 if(halfHour == 0)
 {
 halfHour = '00';
 }else{
 halfHour = '30';
 }
 
 var hour = d.getHours();
 if("US" == "US"){
 var ampm = ' AM';
